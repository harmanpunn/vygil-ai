# Vygil AI Activity Tracker - Environment Configuration

# =============================================================================
# API Keys - Required for LLM processing
# =============================================================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Fireworks API Key (for alternative models)
FIREWORKS_API_KEY=your-fireworks-key-here

# =============================================================================
# MCP Server Configuration
# =============================================================================
# MCP Server Port
MCP_PORT=3001

# CORS Configuration - Add your frontend domains
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# Rate Limiting (requests per minute per user)
RATE_LIMIT_PER_USER=100

# =============================================================================
# Agent Configuration
# =============================================================================
# Agent Loop Interval (seconds)
AGENT_LOOP_INTERVAL=20

# Maximum Retries for Failed Operations
MAX_RETRIES=3

# Agent Timeout (seconds)
AGENT_TIMEOUT=10

# =============================================================================
# OCR & Processing Configuration
# =============================================================================
# Tesseract OCR Language
TESSERACT_LANGUAGE=eng

# OCR Timeout (seconds)
OCR_TIMEOUT=30

# =============================================================================
# Logging Configuration
# =============================================================================
# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# Log File Path
LOG_FILE=logs/vygil.log

# =============================================================================
# Health Check & Monitoring
# =============================================================================
# Health Check Interval (milliseconds)
HEALTH_CHECK_INTERVAL_MS=60000

# =============================================================================
# Database Configuration (Future)
# =============================================================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/vygil
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Production Configuration
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Enable/Disable Features
ENABLE_SCREEN_CAPTURE=true
ENABLE_ACTIVITY_LOGGING=true
ENABLE_FOCUS_TRACKING=true