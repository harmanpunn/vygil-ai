{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "Modal Context Protocol server for screen sharing",
  "main": "dist/vygil-mcp-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/vygil-mcp-server.js",
    "start:http": "node dist/vygil-http-server.js",
    "dev": "npx ts-node --esm src/vygil-mcp-server.ts",
    "dev:http": "npx ts-node --esm src/vygil-http-server.ts",
    "test": "node testing/test-mcp-tools.js",
    "test:browser": "echo \"Open testing/test-http-mcp.html in your browser to run manual tests\"",
    "test:all": "npm run test && npm run test:browser"
  },
  "keywords": [
    "mcp",
    "screen-sharing",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jimp": "^0.22.10",
    "screenshot-desktop": "^1.15.1",
    "socket.io": "^4.8.1",
    "tesseract.js": "^6.0.1",
    "uuid": "^8.3.2",
    "zod": "^3.25.76",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/jimp": "^0.2.28",
    "@types/node": "^16.18.126",
    "@types/screenshot-desktop": "^1.15.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^7.6.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
